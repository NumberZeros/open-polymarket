# ==============================================================================
# Polymarket Builder Program Credentials
# ==============================================================================
# Get these from: https://polymarket.com/builders
# IMPORTANT: Keep these SECRET - server-side only (no NEXT_PUBLIC_ prefix)
#
# These credentials enable:
# - Order attribution headers for Builder Program rewards
# - Remote signing via /api/builder/sign endpoint
# ==============================================================================
POLY_BUILDER_API_KEY=your_builder_api_key_here
POLY_BUILDER_SECRET=your_builder_secret_here
POLY_BUILDER_PASSPHRASE=your_builder_passphrase_here

# ==============================================================================
# Polygon Network Configuration
# ==============================================================================
# RPC endpoint for Polygon network
# Public RPCs: https://polygon-rpc.com, https://rpc.ankr.com/polygon
# Or use Alchemy/Infura for better reliability
# ==============================================================================
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com

# ==============================================================================
# Polymarket API Endpoints
# ==============================================================================
# These are public API endpoints used by the application
# You can use these defaults or point to custom instances
# ==============================================================================
NEXT_PUBLIC_POLYMARKET_API_BASE=https://gamma-api.polymarket.com
NEXT_PUBLIC_CLOB_API_BASE=https://clob.polymarket.com
NEXT_PUBLIC_POLYMARKET_DATA_API_BASE=https://data-api.polymarket.com

# ==============================================================================
# Wallet Connection
# ==============================================================================
# WalletConnect Project ID (get from https://cloud.walletconnect.com)
# Required for WalletConnect support
# ==============================================================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ==============================================================================
# Builder Signing Server (Optional Override)
# ==============================================================================
# By default, the app uses /api/builder/sign endpoint
# Set this only if you want to use an external signing server
# ==============================================================================
# NEXT_PUBLIC_POLY_SIGNING_SERVER_URL=https://your-signing-server.com/sign
# POLY_SIGNING_SERVER_TOKEN=optional_auth_token

# ==============================================================================
# Testing Configuration (Development Only)
# ==============================================================================
# Private key for testing trading service
# ONLY use a test wallet with small amounts!
# NEVER use your main wallet private key
# ==============================================================================
TEST_WALLET_PRIVATE_KEY=0x...your_test_wallet_private_key
# Optional: Safe wallet address for proxy wallet testing
TEST_SAFE_ADDRESS=0x...your_safe_wallet_address
